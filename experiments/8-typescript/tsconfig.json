{
  "include": ["src/**/*", "test/**/*.ts"],
  "compilerOptions": {
    /* Visit https://aka.ms/tsconfig.json to read more about this file */

    "target": "es2020",
    "module": "commonjs",
    "allowJs": true,
    "checkJs": true,
    "declaration": true,
    "declarationDir": "./types",
    "declarationMap": true,
    "sourceMap": true,
    "outDir": "./build",
    "rootDir": "./",
    "composite": true,
    "removeComments": true,
    "strict": true,

    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,

    "moduleResolution": "node",
    "baseUrl": "./",
    "paths": {},
    "rootDirs": ["src", "types", "test"],
    "typeRoots": ["./node_modules/@types/"],
    // "types": [],
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,

    // check for anything helpful on spacevim side and delete if none
    "sourceMap": false,
    "inlineSourceMap": true,
    "inlineSources": true,

    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  }
}
